<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp"
    android:background="#A3D5FD">

    <TextView
        android:id="@+id/otpHeading"
        android:layout_width="399dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:text="Please check your Message"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/otpHeading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="108dp"
        android:text="Enter a 4-digit code which you have received on your registered mobile number"
        android:textAlignment="gravity"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/otpHeading1"
        tools:layout_editor_absoluteX="-12dp"
        android:id="@+id/otpBox"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/bg"
            android:id="@+id/Otp1"
            android:hint="4"
            android:textSize="21dp"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>


        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg"
            android:id="@+id/Otp2"
            android:inputType="number"
            android:hint="7"
            android:textSize="21dp"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg"
            android:id="@+id/Otp3"
            android:inputType="number"
            android:hint="9"
            android:textSize="21dp"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg"
            android:id="@+id/Otp4"
            android:inputType="number"
            android:hint="2"
            android:textSize="21dp"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/otpBox"
        tools:layout_editor_absoluteX="115dp"
        android:text="Submit"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>