<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUser">

    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="36dp"
        android:id="@+id/Heading"
        android:text="Register"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#F40317"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:id="@+id/PersonalInformation"
        android:layout_width="413dp"
        android:layout_height="473dp"
        android:layout_marginTop="16dp"
        android:background=""
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/Heading"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Name1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="Name : "
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/Name2"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/background"
                android:hint="First Name"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/Name3"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/background"
                android:hint="last Name"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></EditText>


        </TableRow>

        <TableRow
            android:id="@+id/Mobile"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Mobile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="Phone : "
                android:textSize="25dp"

                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/Phone2"
                android:layout_width="311dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:background="@drawable/background"
                android:drawableRight="@drawable/baseline_smartphone_24"
                android:hint="Phone"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></EditText>

        </TableRow>

        <TableRow
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="Email : "
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/Email2"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/background"
                android:drawableRight="@drawable/baseline_email_24"
                android:hint="Mail"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></EditText>

        </TableRow>

        <TableRow
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="Password : "
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/password1"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/background"
                android:drawableRight="@drawable/baseline_key_24"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:textStyle="bold"></EditText>

        </TableRow>

        <TableRow
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirmPassword1"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="confirm Password : "
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/confirmpassword2"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/background"
                android:drawableRight="@drawable/baseline_key_24"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></EditText>

        </TableRow>

        <TableRow
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gender1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="Gender: "
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <RadioButton
                android:id="@+id/other"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:hint="Male"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></RadioButton>

            <RadioButton
                android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:hint="Female"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></RadioButton>

            <RadioButton
                android:id="@+id/male"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:hint="Other"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></RadioButton>

        </TableRow>

    </LinearLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="135dp"
        android:layout_height="56dp"
        android:layout_marginTop="64dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PersonalInformation"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>